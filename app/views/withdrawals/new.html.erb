<h1>New Withdrawal</h1>

<%= form_with model: @withdrawal, local: true do |form| %>
  <div>
    <%= form.label :amount %>
    <%= form.number_field :amount, step: 0.01, min: 0, required: true %>
  </div>
  
  <div>
    <%= form.submit 'Request Withdrawal', class: 'btn btn-success' %>
  </div>
<% end %>

<%= link_to 'Back to Withdrawals', withdrawals_path, class: 'btn btn-secondary' %>
